; Название темы, как оно будет отображаться в админке
name = Thposter
; Описание темы
description = Thposter
; Версия ядра
core = 7.x
; Шаблонизатор используемый темой, по умолчанию phptemplate
engine = phptemplate
; Версия темы
version = 1
 
; Путь к скриншоту темы
screenshot = logo.png
 
; Регионы темы, в которые можно будет вставлять блоки
regions[header] = Right sidebar
regions[content] = content
regions[right] = sidebar
regions[footer] = footer

; Настройки темы, которые будут доступны из админки
;features[] = name
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
;features[] = favicon
;features[] = primary_links
;features[] = secondary_links
 
; Стили
stylesheets[all][] = css/reset.css
stylesheets[all][] = css/main.css